<%- include('../partials/header',{title:'Login'}); -%>
   
<section class="authentication">
	<div class='sign-in'>
		<h2 class="title">I already have an Account</h2>
		<span>Log in with your email and password</span>

		<form action="" method="POST">
			<small class="error" id="signin-error"></small>
			<div class="group">
				<input placeholder="Email" class="form-input" id="login-email"  type="email" name="email" required label="email">
			</div>
			<div class="group">
				<input placeholder="Password" class="form-input" id="login-password" type="password" name="password" required label="email">
			</div>
			<div class='buttons'>
				<button type="submit" name="login" class="custom-button" id="signin-button" >Sign In</button>
			</div>
			<br/>
			<% 
				if(typeof error !== 'undefined' && error != "")
				{ 
			%>
				<div class="err-msg">
					<%= error		%>
				</div>
			<% 
				} 
			%>
			<div class="form-footer">
				<label class="float-left" style = "font-weight: normal">
					<input type="checkbox" name="checkbox"> Remember Me
				</label>
				<a href="/auth/forgotpassword">Forgot Password</a>
			</div>
		</form>
	</div>
</section>

<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-primary">
                    <h3>Login</h3>
                </div>
				
				<div class="card-body">
					<img src="/images/pic.jpeg" alt="" 
							class="card-img-top mx-auto m-2 rounded-circle w-50">
						 
					<form action="" method="POST">     
						<div class="form-group">
							<label for="user_email" class="float-left">Email Address</label>
							<input type="email" class="form-control" 
									name="email" id="user_email" 
									autocomplete="off" placeholder="Enter your email">
						</div>
						
						<div class="form-group">
							<label for="user_pass" class="float-left">Password</label>
							<input type="password" class="form-control" 
									name="password" id="user_pass" 
									placeholder="Enter new password">
						</div>
						
						<% 
							if(typeof error !== 'undefined' && error != "")
							{ 
						%>
							<div class="err-msg">
								<%= error		%>
							</div>
						<% 
							} 
						%>
						
						<div class="form-group">
						    <label class="float-left" style = "font-weight: normal">
								 <input type="checkbox" name="checkbox"> Remember Me
						    </label>
							
							<a href="./passReset_Request" class="float-right"	style = "color:#17202A"> 
										Forgot Password? 
							</a>
						</div>
						
						<div class="form-group">
							<input type="submit" value="Login">
							<div class="link">
								Don't have an account?
								<a href="./signup">Sign Up</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('../partials/footer'); -%>
